    },
    "element": [
        {
            "@name": "Mark of Handling",
            "@type": "Race Variant",
            "@source": "Eberron: Rising from the Last War",
            "@id": "ID_WOTC_ERLW_RACE_VARIANT_MARK_OF_HANDLING",
            "supports": "Human",
            "description": {
                "p": [
                    "The Mark of Handling gives its bearer a primal connection to beasts and the natural world, granting the power to calm and coax. This extends beyond purely natural animals; the mark allows its bearer to guide a hippogriff as easily as a horse.",
                    "If your human character has the Mark of Handling, the following traits replace the human’s Ability Score Increase trait in the Player’s Handbook.",
                    {
                        "strong": {
                            "em": "Ability Score Increase."
                        },
                        "#text": "Your Wisdom score increases by 2, and one other ability score of your choice increases by 1."
                    },
                    {
                        "strong": {
                            "em": "Wild Intuition."
                        },
                        "#text": "When you make a Wisdom (Animal Handling) or Intelligence (Nature) check, you can roll a d4 and add the number rolled to the ability check."
                    },
                    {
                        "strong": {
                            "em": "Primal Connection."
                        },
                        "#text": "You can cast the animal friendship and speak with animals spells with this trait, requiring no material component. Once you cast either spell with this trait, you can’t cast that spell with it again until you finish a short or long rest. Wisdom is your spellcasting ability for these spells."
                    },
                    {
                        "strong": {
                            "em": "The Bigger They Are."
                        },
                        "#text": "Starting at 3rd level, you can target a beast or monstrosity when you cast animal friendship or speak with animals, provided the creature’s Intelligence score is 3 or lower."
                    },
                    {
                        "strong": {
                            "em": "Spells of the Mark."
                        },
                        "#text": "If you have the Spellcasting or the Pact Magic class feature, the spells on the Mark of Handling Spells table are added to the spell list of your spellcasting class."
                    },
                    {
                        "strong": "MARK OF HANDLING SPELLS"
                    }
                ],
                "table": {
                    "thead": {
                        "tr": [
                            "Spell Level",
                            "Spells"
                        ]
                    },
                    "tr": [
                        "1st",
                        {
                            "em": "animal friendship, speak with animals"
                        },
                        [
                            "2nd",
                            {
                                "em": "beast sense, calm emotions"
                            }
                        ],
                        [
                            "3rd",
                            {
                                "em": "beacon of hope, conjure animals"
                            }
                        ],
                        [
                            "4th",
                            {
                                "em": "aura of life, dominate beast"
                            }
                        ],
                        [
                            "5th",
                            {
                                "em": "awaken"
                            }
                        ]
                    ]
                }
            },
            "sheet": {
                "@alt": "Human (Mark of Handling)",
                "@display": "false"
            },
            "rules": {
                "grant": [
                    {
                        "@type": "Dragonmark",
                        "@id": "ID_WOTC_ERLW_DRAGONMARK_MARK_OF_HANDLING"
                    },
                    {
                        "@type": "Racial Trait",
                        "@id": "ID_WOTC_ERLW_RACIAL_TRAIT_MARK_OF_HANDLING_WILD_INTUITION"
                    },
                    {
                        "@type": "Racial Trait",
                        "@id": "ID_WOTC_ERLW_RACIAL_TRAIT_MARK_OF_HANDLING_PRIMAL_CONNECTION"
                    },
                    {
                        "@type": "Racial Trait",
                        "@id": "ID_WOTC_ERLW_RACIAL_TRAIT_MARK_OF_HANDLING_THE_BIGGER_THEY_ARE",
                        "@level": "3"
                    },
                    {
                        "@type": "Racial Trait",
                        "@id": "ID_WOTC_ERLW_RACIAL_TRAIT_MARK_OF_HANDLING_SPELLS_OF_THE_MARK"
                    }
                ],
                "stat": {
                    "@name": "wisdom",
                    "@value": "2"
                },
                "select": {
                    "@type": "Racial Trait",
                    "@name": "Ability Score Increase, Mark of Handling",
                    "@supports": "Ability Score Increase,Dragonmark,!Wisdom"
                }
            }
        },

                        },
                        [
                            "2nd",
                            {
                                "em": "arcane lock, knock"
                            }
                        ],
                        [
                            "3rd",
                            {
                                "em": "glyph of warding, magic circle"
                            }
                        ],
                        [
                            "4th",
                            {
                                "em": "Leomund’s secret chest, Mordenkainen’s faithful hound"
                            }
                        ],
                        [
                            "5th",
                            {
                                "em": "antilife shell"
                            }
                        ]
                    ]
                }
            },
            "sheet": {
                "@display": "false",
                "description": "The spells on the Mark of Warding Spells table are added to the spell list of your spellcasting class."
            },
            "spellcasting": {
                "@all": "true",
                "@extend": "true",
                "extend": [
                    "ID_PHB_SPELL_ALARM",
                    "ID_PHB_SPELL_ARMOR_OF_AGATHYS",
                    "ID_PHB_SPELL_ARCANE_LOCK",
                    "ID_PHB_SPELL_KNOCK",
                    "ID_PHB_SPELL_GLYPH_OF_WARDING",
                    "ID_PHB_SPELL_MAGIC_CIRCLE",
                    "ID_PHB_SPELL_LEOMUNDS_SECRET_CHEST",
                    "ID_PHB_SPELL_MORDENKAINENS_FAITHFUL_HOUND",
                    "ID_PHB_SPELL_ANTILIFE_SHELL"
                ]
            }
        }
    ]

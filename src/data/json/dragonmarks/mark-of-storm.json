    },
    "element": [
        {
            "@name": "Mark of Storm",
            "@type": "Race Variant",
            "@source": "Eberron: Rising from the Last War",
            "@id": "ID_WOTC_ERLW_RACE_VARIANT_MARK_OF_STORM",
            "supports": "Half-Elf Variant",
            "description": {
                "p": [
                    "Wind and water welcome the half-elves who carry the Mark of Storm, and some learn to call on the power of the storm itself.",
                    "If your half-elf character has the Mark of Storm, the following traits replace the half-elf’s Ability Score Increase and Skill Versatility traits in the Player’s Handbook.",
                    {
                        "strong": {
                            "em": "Ability Score Increase."
                        },
                        "#text": "Your Charisma score increases by 2, and your Dexterity score increases by 1."
                    },
                    {
                        "strong": {
                            "em": "Windwright’s Intuition."
                        },
                        "#text": "When you make a Dexterity (Acrobatics) check or any ability check involving navigator’s tools, you can roll a d4 and add the number rolled to the ability check."
                    },
                    {
                        "strong": {
                            "em": "Storm’s Boon."
                        },
                        "#text": "You have resistance to lightning damage."
                    },
                    {
                        "strong": {
                            "em": "Headwinds."
                        },
                        "#text": "You know the gust cantrip. Starting at 3rd level, you can cast the gust of wind spell once with this trait, and you regain the ability to cast it when you finish a long rest. Charisma is your spellcasting ability for these spells."
                    },
                    {
                        "strong": {
                            "em": "Spells of the Mark."
                        },
                        "#text": "If you have the Spellcasting or the Pact Magic class feature, the spells on the Mark of Storm Spells table are added to the spell list of your spellcasting class."
                    },
                    {
                        "strong": "MARK OF STORM SPELLS"
                    }
                ],
                "table": {
                    "thead": {
                        "tr": [
                            "Spell Level",
                            "Spells"
                        ]
                    },
                    "tr": [
                        "1st",
                        {
                            "em": "feather fall, fog cloud"
                        },
                        [
                            "2nd",
                            {
                                "em": "gust of wind, levitate"
                            }
                        ],
                        [
                            "3rd",
                            {
                                "em": "sleet storm, wind wall"
                            }
                        ],
                        [
                            "4th",
                            {
                                "em": "conjure minor elemental, control water"
                            }
                        ],
                        [
                            "5th",
                            {
                                "em": "conjure elemental"
                            }
                        ]
                    ]
                }
            },
            "sheet": {
                "@alt": "Half-Elf (Mark of Storm)",
                "@display": "false"
            },
            "rules": {
                "grant": [
                    {
                        "@type": "Dragonmark",
                        "@id": "ID_WOTC_ERLW_DRAGONMARK_MARK_OF_STORM"
                    },
                    {
                        "@type": "Racial Trait",
                        "@id": "ID_WOTC_ERLW_RACIAL_TRAIT_MARK_OF_STORM_WINDWRIGHTS_INTUITION"
                    },
                    {
                        "@type": "Racial Trait",
                        "@id": "ID_WOTC_ERLW_RACIAL_TRAIT_MARK_OF_STORM_STORMS_BOON"
                    },
                    {
                        "@type": "Racial Trait",
                        "@id": "ID_WOTC_ERLW_RACIAL_TRAIT_MARK_OF_STORM_HEADWINDS"
                    },
                    {
                        "@type": "Racial Trait",
                        "@id": "ID_WOTC_ERLW_RACIAL_TRAIT_MARK_OF_STORM_SPELLS_OF_THE_MARK"
                    }
                ],
                "stat": [
                    {
                        "@name": "charisma",
                        "@value": "2"
                    },
                    {
                        "@name": "dexterity",
                        "@value": "1"
                    }
                ]
            }
        },
        {
            "@name": "Windwright’s Intuition",
            "@type": "Racial Trait",
            "@source": "Eberron: Rising from the Last War",
            "@id": "ID_WOTC_ERLW_RACIAL_TRAIT_MARK_OF_STORM_WINDWRIGHTS_INTUITION",
            "description": {
                "p": "When you make a Dexterity (Acrobatics) check or any ability check involving navigator’s tools, you can roll a d4 and add the number rolled to the ability check."
            },
            "sheet": {
                "description": "When you make a Acrobatics check or any ability check involving navigator’s tools, you can roll a d4 and add the number rolled to the ability check."
            }
        },
        {

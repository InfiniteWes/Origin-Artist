    },
    "element": [
        {
            "@name": "Mark of Finding",
            "@type": "Race Variant",
            "@source": "Eberron: Rising from the Last War",
            "@id": "ID_WOTC_ERLW_RACE_VARIANT_MARK_OF_FINDING",
            "supports": "Human",
            "description": {
                "p": [
                    "The Mark of Finding sharpens the senses, guiding the hunter to prey. Alone among the dragonmarks, the Mark of Finding is carried by two races: humans and half-orcs. It first appeared in the Shadow Marches, where clan hunters used it to find their prey.",
                    "If your half-orc or human character has the Mark of Finding, the following traits replace the character’s racial traits in the Player’s Handbook, aside from age, alignment, size, and speed.",
                    {
                        "strong": {
                            "em": "Ability Score Increase."
                        },
                        "#text": "Your Wisdom score increases by 2, and your Constitution score increases by 1."
                    },
                    {
                        "strong": {
                            "em": "Darkvision."
                        },
                        "#text": "You can see in dim light within 60 feet of you as if it were bright light, and in darkness as if it were dim light. You can’t discern color in darkness, only shades of gray."
                    },
                    {
                        "strong": {
                            "em": "Hunter’s Intuition."
                        },
                        "#text": "When you make a Wisdom (Perception) or Wisdom (Survival) check, you can roll a d4 and add the number rolled to the ability check."
                    },
                    {
                        "strong": {
                            "em": "Finder’s Magic."
                        },
                        "#text": "You can cast the hunter’s mark spell with this trait. Starting at 3rd level, you can also cast the locate object spell with it. Once you cast either spell with this trait, you can’t cast that spell with it again until you finish a long rest. Wisdom is your spellcasting ability for these spells."
                    },
                    {
                        "strong": {
                            "em": "Languages."
                        },
                        "#text": "You can speak, read, and write Common and Goblin."
                    },
                    {
                        "strong": {
                            "em": "Spells of the Mark."
                        },
                        "#text": "If you have the Spellcasting or the Pact Magic class feature, the spells on the Mark of Finding Spells table are added to the spell list of your spellcasting class."
                    },
                    {
                        "strong": "MARK OF FINDING SPELLS"
                    }
                ],
                "table": {
                    "thead": {
                        "tr": [
                            "Spell Level",
                            "Spells"
                        ]
                    },
                    "tr": [
                        "1st",
                        {
                            "em": "faerie fire, longstrider"
                        },
                        [
                            "2nd",
                            {
                                "em": "locate animals or plants, locate object"
                            }
                        ],
                        [
                            "3rd",
                            {
                                "em": "clairvoyance, speak with plants"
                            }
                        ],
                        [
                            "4th",
                            {
                                "em": "divination, locate creature"
                            }
                        ],
                        [
                            "5th",
                            {
                                "em": "commune with nature"
                            }
                        ]
                    ]
                }
            },
            "sheet": {
                "@alt": "Human (Mark of Finding)",
                "@display": "false"
            },
            "rules": {
                "grant": [
                    {
                        "@type": "Dragonmark",
                        "@id": "ID_WOTC_ERLW_DRAGONMARK_MARK_OF_FINDING"
                    },
                    {
                        "@type": "Vision",
                        "@id": "ID_VISION_DARKVISION"
                    },
                    {
                        "@type": "Racial Trait",
                        "@id": "ID_WOTC_ERLW_RACIAL_TRAIT_MARK_OF_FINDING_HUNTERS_INTUITION"
                    },
                    {
                        "@type": "Racial Trait",
                        "@id": "ID_WOTC_ERLW_RACIAL_TRAIT_MARK_OF_FINDING_FINDERS_MAGIC"
                    },
                    {
                        "@type": "Racial Trait",
                        "@id": "ID_WOTC_ERLW_RACIAL_TRAIT_MARK_OF_FINDING_SPELLS_OF_THE_MARK"
                    },
                    {
                        "@type": "Language",
                        "@id": "ID_LANGUAGE_GOBLIN"
                    }
                ],
                "stat": [
                    {
                        "@name": "wisdom",
                        "@value": "2"
                    },
                    {
                        "@name": "constitution",
                        "@value": "1"
                    }
                ]
            }
        },
        {
            "@name": "Hunter’s Intuition",

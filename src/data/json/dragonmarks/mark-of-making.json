                "@extend": "true",
                "extend": [
                    "ID_PHB_SPELL_IDENTIFY",
                    "ID_PHB_SPELL_TENSERS_FLOATING_DISK",
                    "ID_PHB_SPELL_CONTINUAL_FLAME",
                    "ID_PHB_SPELL_MAGIC_WEAPON",
                    "ID_PHB_SPELL_CONJURE_BARRAGE",
                    "ID_PHB_SPELL_ELEMENTAL_WEAPON",
                    "ID_PHB_SPELL_FABRICATE",
